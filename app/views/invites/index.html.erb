<div class="wrapper">
  <h1>Invite members</h1>
  <div class="table">
    <div class="row header">
      <div class="cell">
        Userame
      </div>
      <div class="cell">
        Accepted On
      </div>
      <div class="cell">
        Email
      </div>
    </div>
    <% uninvited(@event, @users).each do |a|%>
      <div class="row">
        <div class="cell" data-title="Name">
          <%= a.username%>
        </div>
        <div class="cell" data-title="Age">
          <%=a.updated_at.strftime('%B %d, %Y')%>
        </div>
        <div class="cell" data-title="Occupation">
          <%= a.email%>
        </div>
      </div>
    <%end%>
  </div>